{
  "name": "sora-auto-queue-prompts",
  "displayName": "Sora Auto Queue Prompts",
  "version": "1.0.1",
  "description": "Automate prompt generation and queue management for Sora AI video/image generation",
  "author": "YosefHayim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YosefHayim/extension-sora-auto-queue-prompts.git"
  },
  "bugs": {
    "url": "https://github.com/YosefHayim/extension-sora-auto-queue-prompts/issues"
  },
  "homepage": "https://github.com/YosefHayim/extension-sora-auto-queue-prompts#readme",
  "keywords": [
    "sora",
    "ai",
    "prompts",
    "automation",
    "chrome-extension",
    "openai",
    "queue",
    "video-generation",
    "image-generation"
  ],
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "npm run clean && npm run bundle && npm run copy-assets",
    "bundle": "esbuild src/background.ts --bundle --outfile=dist/background.js --format=iife --target=chrome90 && esbuild src/popup.tsx --bundle --outfile=dist/popup.js --format=iife --target=chrome90 && esbuild src/content.ts --bundle --outfile=dist/content.js --format=iife --target=chrome90",
    "copy-assets": "cpy icons dist --parents && cpy \"assets/*.{json,html,css}\" dist --flat",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "del-cli dist *.zip",
    "prepare": "husky",
    "lint": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {},
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/chrome": "^0.0.258",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "cpy-cli": "^5.0.0",
    "del-cli": "^5.1.0",
    "esbuild": "^0.19.11",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}