{
  "name": "sora-auto-queue-prompts",
  "displayName": "Sora Auto Queue Prompts",
  "version": "2.0.0",
  "description": "Automate prompt generation and queue management for Sora AI video/image generation",
  "author": "YosefHayim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YosefHayim/extension-sora-auto-queue-prompts.git"
  },
  "bugs": {
    "url": "https://github.com/YosefHayim/extension-sora-auto-queue-prompts/issues"
  },
  "homepage": "https://github.com/YosefHayim/extension-sora-auto-queue-prompts#readme",
  "keywords": [
    "sora",
    "ai",
    "prompts",
    "automation",
    "chrome-extension",
    "openai",
    "queue",
    "video-generation",
    "image-generation"
  ],
  "scripts": {
    "dev": "pnpm run clean && pnpm run build:css && pnpm run bundle -- --watch",
    "build": "pnpm run clean && pnpm run build:css && pnpm run bundle && pnpm run copy-assets",
    "build:css": "pnpm exec tailwindcss -i src/styles/globals.css -o dist/popup.css --minify",
    "dev:css": "pnpm exec tailwindcss -i src/styles/globals.css -o dist/popup.css --watch",
    "bundle": "esbuild src/background.ts --bundle --outfile=dist/background.js --format=iife --target=chrome90 && esbuild src/popup.tsx --bundle --outfile=dist/popup.js --format=iife --target=chrome90 --external:*.css && esbuild src/content.ts --bundle --outfile=dist/content.js --format=iife --target=chrome90",
    "copy-assets": "cpy icons dist --parents && cpy \"assets/*.{json,html}\" dist --flat",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "clean": "del-cli dist *.zip",
    "prepare": "husky",
    "lint": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/chrome": "^0.0.258",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cpy-cli": "^5.0.0",
    "del-cli": "^5.1.0",
    "esbuild": "^0.19.11",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lucide-react": "^0.554.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}