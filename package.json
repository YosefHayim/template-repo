{
  "name": "sora-auto-queue-prompts",
  "displayName": "Sora Auto Queue Prompts",
  "version": "1.0.0",
  "description": "Browser extension to automate prompt generation and queueing for Sora AI",
  "author": "YosefHayim",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "plasmo package",
    "postinstall": "pnpm rebuild sharp || echo 'Sharp rebuild skipped'"
  },
  "dependencies": {
    "plasmo": "^0.88.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.5"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.34.5"
    }
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@plasmohq/prettier-plugin-sort-imports": "^4.0.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "activeTab"
    ]
  }
}